<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/activity_note_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    tools:context="com.jmajyo.noteapp.activities.noteDetailActivity">

    <fragment
        android:name="com.jmajyo.noteapp.fragments.NoteDetailFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout="@layout/fragment_note_detail"
        android:layout_weight="1.8"/>
    <Button
        android:id="@+id/activity_note_detail___close_button"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="Save"
        android:textAllCaps="false"
        android:layout_weight="1"/>

</LinearLayout>
